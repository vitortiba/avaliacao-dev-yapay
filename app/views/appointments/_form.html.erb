<div class="d-flex justify-content-around">
  <div class="col-md-6">
    <%= image_tag @service.image.url(:medium) %>

    <p>
      <strong>Descrição:</strong>
      <%= @service.description %>
    </p>

    <p>
      <strong>Valor:</strong>
      <%= @service.value %>
    </p>
  </div>

  <%= form_with scope: :appointment, url: service_appointments_path, class: "col-md-6", local: true do |form| %>
    <% if @appointment.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@appointment.errors.count, "error") %> Erros:
        </h2>
        <ul>
          <% @appointment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <label>Digite seu nome:</label><br>
      <%= form.text_field :name %>
    </p>

    <p>
      <label>Digite seu email (Voce receberá um email informativo):</label><br>
      <%= form.email_field :email %>
    </p>

    <p>
      <labe>Telefone</labe><br>
      <%= form.text_field :contact %>
    </p>

    <p>
      <label>Data e hora do agendamento:</label>
      <%= form.datetime_select :date %>
    </p>

    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>